---
import { PopoverMenu } from '@components/popover-menu';
import Simple from '@components/simple.astro';
import BaseLayout from '@layouts/base.astro';
---

<BaseLayout>
    <div class="h-screen grid grid-rows-[auto_1fr]">
        <menu class="flex justify-center bg-stone-700 dark:bg-slate-900 p-8 pb-20">
            <PopoverMenu client:load buttonClasses="text-slate-200 hover:bg-white/10 transition-colors">
                <Simple slot="slotNameValue" />
            </PopoverMenu>
        </menu>
        <main class="flex justify-center items-center bg-stone-200 dark:bg-slate-700 text-5xl font-bold">
            <a href="/">home</a>
        </main>
    </div>
</BaseLayout>
