---
import { InteractiveExample } from '@components/interactive-example';
import { PopoverMenu } from '@components/popover-menu';

export const partial = true;

const secondsPerWeek = 604800;
Astro.response.headers.set('Cache-Control', `max-age=${secondsPerWeek}`);
---

<div class="flex flex-col items-start gap-2 font-bold text-lg rounded p-4 bg-gray-100">
    <InteractiveExample client:load />
    <PopoverMenu
        client:load
        buttonClasses="bg-stone-200 hover:bg-white transition-colors dark:bg-slate-300 dark:hover:bg-slate-50 dark:text-slate-950"
    />
</div>
