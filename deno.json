{
    "tasks": {
        "lint": "deno lint",
        "format": "deno fmt",
        "check-ts": {
            "dependencies": [
                "lint",
                "format"
            ],
            "command": "deno check ./ --frozen"
        },
        "check-code": "deno task check-ts && astro check",

        "dev": "astro dev",

        "build": "deno task check-code && astro build && deno run -W source/robots.txt.ts",
        "serve": "deno run -RNE dist/server/entry.mjs",
        "test-e2e": "deno test -N e2e-tests",

        "disable-telemetry": "astro telemetry disable"
    },
    "nodeModulesDir": "auto",
    "compilerOptions": {
        "lib": [
            "deno.ns",
            "DOM"
        ]
    },
    "exclude": [
        ".astro/",
        "dist/",
        "node_modules/",
        "public/"
    ],
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 140,
        "singleQuote": true
    },
    "unstable": ["fmt-component"],
    "imports": {
        "@layouts/": "./source/layouts/",
        "@logic/": "./source/logic/",
        "@std/assert": "jsr:@std/assert@1.0.18",
        "@std/path": "jsr:@std/path@1.1.4"
    },
    "allowScripts": ["npm:esbuild@0.25.12", "npm:fsevents@2.3.3", "npm:sharp@0.34.5"]
}
