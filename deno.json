{
    "tasks": {
        "disable-telemetry": "astro telemetry disable",
        "check-code": "deno lint && deno fmt && deno check **/*.ts **/*.tsx",
        "dev": "astro dev",
        "build": "deno task check-code && astro build && deno run -W source/robots.txt.ts",
        "serve": "deno run -RNE ./dist/server/entry.mjs",
        "test-e2e": "deno test -N e2e-tests"
    },
    "nodeModulesDir": "auto",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": [
            "deno.ns",
            "DOM"
        ]
    },
    "exclude": [
        ".astro/",
        "dist/",
        "node_modules/",
        "public/"
    ],
    "fmt": {
        "indentWidth": 4,
        "lineWidth": 140,
        "singleQuote": true
    },
    "unstable": ["fmt-component"],
    "imports": {
        "@components/": "./source/components/",
        "@layouts/": "./source/layouts/",
        "@logic/": "./source/logic/",
        "@std/assert": "jsr:@std/assert@~1.0.11"
    }
}
